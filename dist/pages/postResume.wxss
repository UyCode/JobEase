.item {
  padding: 0 23rpx
}
.item .header {
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  align-items: center;
  height: 88rpx
}
.item .header .span {
  font-size: 32rpx;
  font-weight: bold;
  color: #2d2d33;
  display: flex;
  flex-direction: row;
  align-items: center;
  line-height: 40rpx;
  position: relative
}
.item .header .span:before {
  content: '';
  position: absolute;
  left: -30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 28rpx;
  background: #3b6afb
}
.item .header .span .hint {
  font-size: 24rpx;
  line-height: 40rpx;
  color: #6a6a77;
  font-weight: 400;
  margin-left: 24rpx
}
.item .header .icon {
  width: 88rpx;
  height: 88rpx;
  display: block;
  font-family: 'TieJia';
  text-align: center;
  line-height: 88rpx;
  text-align: right;
  color: #9ea4af
}
.item .li {
  display: flex;
  flex-direction: row
}
.item .li .dian {
  display: flex;
  flex-wrap: wrap;
  text-align: left;
  padding-right: 30rpx;
  font-size: 28rpx;
  color: #6a6a77
}
.item .li .title {
  width: 114rpx;
  height: 40rpx;
  box-sizing: border-box;
  color: #6a6977;
  display: block;
  text-align: justify;
  position: relative;
  font-size: 28rpx;
  flex-shrink: 0
}
.item .li .title:after {
  content: '';
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height: 0
}
.item .li .title:before {
  content: '*';
  position: absolute;
  left: -15rpx;
  top: 0;
  height: 68rpx;
  font-size: 28rpx;
  color: #ff5b3e
}
.more-button {
  padding: 16rpx 0;
  text-align: center;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-bottom: 70rpx
}
.more-button text {
  font-size: 28rpx;
  color: #3b6afb;
  font-weight: bold;
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center
}
.more-button text:after {
  content: '\4E0B';
  font-family: 'TieJia';
  margin-left: 10rpx;
  width: 26rpx;
  height: 26rpx;
  line-height: 26rpx;
  color: #3b6afb;
  text-align: center
}
.submit {
  width: 690rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background: #3b6afb;
  border-radius: 4rpx;
  font-size: 32rpx;
  color: #ffffff;
  font-weight: bold;
  margin: 72rpx auto 24rpx
}
.hint-title {
  font-size: 24rpx;
  color: #9ea4af;
  display: block;
  text-align: center;
  margin-bottom: 120rpx
}