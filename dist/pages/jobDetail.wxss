@import "./../components/footerBtn.wxss";
@import "./../components/tips.wxss";
@import "./../components/resumeRelease.wxss";
@import "./../components/nothing.wxss";
@import "./../components/jobDesc.wxss";
.job {
  padding: 0 30rpx 200rpx 30rpx
}
.job .footerBtn {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  background-color: #ffffff;
  border-top: 1rpx solid rgba(220, 226, 238, 0.6)
}
.job .footerBtn text {
  font-size: 32rpx;
  color: #3b6afb;
  letter-spacing: .28rpx;
  text-align: center;
  font-weight: bold
}
.job .item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid rgba(220, 226, 238, 0.6)
}
.job .item .salary {
  color: #ff4757;
  letter-spacing: .25rpx
}
.job .item .header {
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
  align-items: center
}
.job .item .header .span {
  font-size: 32rpx;
  font-weight: bold;
  color: #2d2d33;
  display: flex;
  flex-direction: row;
  align-items: center;
  line-height: 40rpx;
  position: relative
}
.job .item .header .span.leftLine:before {
  content: '';
  position: absolute;
  left: -30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 28rpx;
  background: #3b6afb
}
.job .item .header .span .hint {
  font-size: 24rpx;
  line-height: 40rpx;
  color: #6a6a77;
  font-weight: 400;
  margin-left: 24rpx
}
.job .item .header .icon {
  width: 34rpx;
  height: 34rpx;
  display: block;
  font-family: 'TieJia';
  text-align: center;
  line-height: 34rpx;
  color: #9ea4af
}
.job .item .li {
  display: flex;
  flex-direction: row
}
.job .item .li .dian {
  display: flex;
  flex-wrap: wrap;
  text-align: left;
  height: 40rpx;
  line-height: 40rpx;
  padding-right: 30rpx;
  font-size: 28rpx;
  color: #6a6a77
}
.job .item .li .title {
  width: 114rpx;
  height: 40rpx;
  box-sizing: border-box;
  color: #9ea4af;
  display: block;
  text-align: justify;
  position: relative;
  font-size: 28rpx;
  flex-shrink: 0
}
.job .item .li .title:after {
  content: '';
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height: 0
}