.show {
  animation: rightAndLeft ease-in .2s;
  animation-fill-mode: forwards
}
.hide {
  animation: leftAndRight ease-in .2s;
  animation-fill-mode: forwards
}
.engContent {
  width: 100%;
  height: 100vh;
  padding-top: 44rpx;
  box-sizing: content-box;
  z-index: 9999;
  background-color: #ffffff
}
.engContent .label {
  width: 670rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 0 auto
}
.engContent .label>view {
  width: 33%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  margin-bottom: 40rpx;
  max-width: 33%
}
.engContent .label text {
  display: block;
  min-width: 140rpx;
  margin: 0 auto;
  padding: 0 10px;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1rpx solid rgba(158, 164, 175, 0.7);
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #4a4a53;
  letter-spacing: .17rpx
}
.engContent .label :nth-child(4) {
  margin-right: 0 !important
}
.engContent .label :nth-child(8) {
  margin-right: 0 !important
}
.engContent .label .active {
  background: #3b6afb;
  color: #ffffff;
  border: 1rpx solid #3b6afb !important
}
.engContent input {
  margin-bottom: 170rpx;
  width: 670rpx;
  height: 80rpx;
  margin: auto;
  border: 1rpx solid rgba(158, 164, 175, 0.7);
  border-radius: 98rpx;
  font-size: 30rpx;
  color: #2d2d33;
  font-weight: bold;
  letter-spacing: .17rpx;
  text-align: center
}
.engContent .btn {
  width: 670rpx;
  height: 80rpx;
  margin: 170rpx auto 0 auto;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: #3b6afb;
  border-radius: 100rpx
}
.engContent .btn text {
  font-size: 32rpx;
  color: #ffffff;
  letter-spacing: .2rpx;
  text-align: center
}
@keyframes rightAndLeft {
  0% {
    right: -100%
  }
  100% {
    right: 0
  }
}
@keyframes leftAndRight {
  0% {
    right: 0
  }
  100% {
    right: -100%
  }
}